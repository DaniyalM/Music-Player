<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/PoppinsTextStyle</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="textInputStyle">@style/EditTextStyle</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">16dp</item>
        <item name="background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PlayButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/antic</item>
        <item name="cornerRadius">25dp</item>
    </style>

    <style name="PoppinsTextStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/bangers</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>